<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:ignore="HardcodedText"
    android:layout_height="240dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.48"
            android:elevation="5dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewshimmer1"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/popularfoodimgshimmer1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#DDDDDDDD"
                        android:contentDescription="userlogo"
                        android:scaleType="fitCenter" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/popularfoodnameshimmer1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#DDDDDD"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewshimmer1"
                    app:layout_constraintStart_toStartOf="@+id/cardViewshimmer1"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewshimmer1" />

                <TextView
                    android:id="@+id/popularfoodratingshimmer1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="#DDDDDD"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/popularfoodnameshimmer1" />

                <ImageView
                    android:id="@+id/imageView4shimmer1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="16dp"
                    android:background="#DDDDDD"
                    android:layout_marginStart="20dp"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewshimmer1"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@+id/cardViewshimmer1"
                    app:layout_constraintTop_toBottomOf="@+id/popularfoodratingshimmer1" />

                <TextView
                    android:id="@+id/popularfoodpriceshimmer1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:background="#DDDDDD"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4shimmer1"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/imageView4shimmer1"
                    app:layout_constraintTop_toTopOf="@+id/imageView4shimmer1" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cartshimmer1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="#DDDDDD"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toEndOf="@+id/popularfoodpriceshimmer1"
                    app:layout_constraintTop_toBottomOf="@+id/popularfoodratingshimmer1">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="userlogo"
                        android:scaleType="fitCenter" />
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.48"
            android:elevation="5dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewshimmer2"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/popularfoodimgshimmer2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#DDDDDD"
                        android:contentDescription="userlogo"
                        android:scaleType="fitCenter" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/popularfoodnameshimmer2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#DDDDDD"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewshimmer2"
                    app:layout_constraintStart_toStartOf="@+id/cardViewshimmer2"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewshimmer2" />

                <TextView
                    android:id="@+id/popularfoodratingshimmer2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="#DDDDDD"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/popularfoodnameshimmer2" />

                <ImageView
                    android:id="@+id/imageView4shimmer2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:background="#DDDDDD"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewshimmer2"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@+id/cardViewshimmer2"
                    app:layout_constraintTop_toBottomOf="@+id/popularfoodratingshimmer2" />

                <TextView
                    android:id="@+id/popularfoodpriceshimmer2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:background="#DDDDDD"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4shimmer2"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/imageView4shimmer2"
                    app:layout_constraintTop_toTopOf="@+id/imageView4shimmer2" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cartshimmer2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="#DDDDDD"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toEndOf="@+id/popularfoodpriceshimmer2"
                    app:layout_constraintTop_toBottomOf="@+id/popularfoodratingshimmer2">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="userlogo"
                        android:scaleType="fitCenter" />
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>